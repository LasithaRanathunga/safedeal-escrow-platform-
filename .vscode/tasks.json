{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/server",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Client",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/client",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Idle Server",
      "type": "shell",
      "command": "cmd.exe",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "label": "Idle Client",
      "type": "shell",
      "command": "cmd.exe",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Full Dev",
      "dependsOn": ["Run Server", "Run Client", "Idle Server", "Idle Client"],
      "dependsOrder": "parallel",
      "runOn": "folderOpen"
    }
  ]
}
